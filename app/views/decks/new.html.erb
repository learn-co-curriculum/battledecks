<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Upload a New Deck</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <%= form_for(@deck, :role => "form") do |f| %>
          <div class="form-group">
            <%= f.label :name, :class => "control-label" %>
            <%= f.text_field :name, :class => "form-control" %>
            <% if @deck.errors[:name].any? %>
            <p class="help-block-error"><%= @deck.errors.full_messages_for(:name).to_sentence %></p>
            <% else %>
            <p class="help-block">Any name will do, try not to name the deck after the content but rather something random.</p>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :url, "Google Doc URL", :class => "control-label" %>
            <%= f.text_field :url, :class => "form-control" %>
            <% if @deck.errors[:url].any? %>
            <p class="help-block-error"><%= @deck.errors.full_messages_for(:url).to_sentence %></p>
            <% else %>
            <p class="help-block">Your deck must be publically viewable and published as a Google Doc</p>
            <% end %>
          </div>
          <%= f.submit "Upload Deck", :class => "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
